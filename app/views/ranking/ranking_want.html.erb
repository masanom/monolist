<div class="cover">
  <div class="cover-inner">
    <div class="cover-contents">
      <h1>Wantランキング</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="container-inner inner-default clearfix">
    <% @ranking_want_items.each_with_index do |item,i| %>
    <div class="ranking-item-box">
        <div class="rank">
          <p class="title">
            <%= "第#{(i + 1)}位" %>
          </p>
        </div>
        <div class="image">
          <div class="img-wrap">
            <% if item.large_image.present? %>
              <%= link_to image_tag(item.large_image, alt: item.title), item_url(id: item.id) %>
            <% else %>
              <%= image_tag("no-image.png" , alt: item.title) %>
            <% end %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <%= item.title %>
          </p>
        </div>
      </div>
      <% end %>
    
  </div>
</div>